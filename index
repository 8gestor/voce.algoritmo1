    <script>
        /* --- RELÓGIO DO SISTEMA --- */
        function updateClock() {
            const now = new Date();
            const dateStr = now.toLocaleDateString('pt-BR', {day: '2-digit', month: '2-digit'});
            const timeStr = now.toLocaleTimeString('pt-BR');
            document.getElementById('system-clock').innerText = `${dateStr} • ${timeStr}`;
        }
        setInterval(updateClock, 1000); updateClock();

        /* --- LÓGICA DO TEMA --- */
        function toggleTheme() {
            document.body.classList.toggle('light-mode');
            const icon = document.getElementById('theme-icon');
            const frame = document.getElementById('main-frame');
            
            // Atualiza ícone
            if(document.body.classList.contains('light-mode')) {
                icon.innerHTML = '<circle cx="12" cy="12" r="5"></circle><line x1="12" y1="1" x2="12" y2="3"></line><line x1="12" y1="21" x2="12" y2="23"></line><line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line><line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line><line x1="1" y1="12" x2="3" y2="12"></line><line x1="21" y1="12" x2="23" y2="12"></line><line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line><line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>';
            } else {
                icon.innerHTML = '<path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>';
            }

            // Propaga tema para o iframe
            if (frame && frame.contentWindow) {
                frame.contentWindow.postMessage({ type: 'theme', mode: document.body.classList.contains('light-mode') ? 'light' : 'dark' }, '*');
            }
        }

        /* --- CONTROLE DE TELA CHEIA (FATOR X - RESTORED) --- */
        function toggleFullScreen() {
            if (!document.fullscreenElement) {
                document.documentElement.requestFullscreen().catch(e => console.log(e));
            } else {
                if (document.exitFullscreen) document.exitFullscreen();
            }
        }

        /* --- CONTROLE GLOBAL DE VOZ (FATOR X REFINADO) --- */
        let ttsRate = 1.0;
        let isPlaying = false;

        function controlTTS(action) {
            const frame = document.getElementById('main-frame');
            if (!frame || !frame.contentWindow) return;

            if (action === 'faster') {
                if (ttsRate < 3.0) ttsRate += 0.25;
            } else if (action === 'slower') {
                if (ttsRate > 0.5) ttsRate -= 0.25;
            } else if (action === 'toggle') {
                isPlaying = !isPlaying;
                updatePlayIcon();
                // Envia comando de toggle (play/pause)
                frame.contentWindow.postMessage({ type: 'tts-toggle' }, '*');
                return; 
            }

            // Arredonda para evitar dízimas flutuantes
            ttsRate = Math.round(ttsRate * 100) / 100;
            document.getElementById('tts-rate-display').innerText = ttsRate + 'x';

            // Envia APENAS o sinal de velocidade.
            // O capítulo receberá isso e reiniciará a frase atual seamlessmente.
            frame.contentWindow.postMessage({ type: 'tts-rate', value: ttsRate }, '*');
        }

        function updatePlayIcon() {
            const btn = document.getElementById('btn-global-play');
            if (isPlaying) {
                // Icone Pause
                btn.innerHTML = '<svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor" stroke="none"><rect x="6" y="4" width="4" height="16"></rect><rect x="14" y="4" width="4" height="16"></rect></svg>';
                btn.classList.add('active-state');
            } else {
                // Icone Play
                btn.innerHTML = '<svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor" stroke="none"><polygon points="5 3 19 12 5 21 5 3"></polygon></svg>';
                btn.classList.remove('active-state');
            }
        }

        // Listener para receber status do iframe (quando a leitura termina sozinha)
        window.addEventListener('message', function(event) {
            if (event.data.type === 'tts-status') {
                isPlaying = event.data.isPlaying;
                updatePlayIcon();
            }
        });

        /* --- NAVEGAÇÃO --- */
        let currentIdx = 0;
        const links = Array.from(document.querySelectorAll('.chapter-link'));
        const labelDisplay = document.getElementById('chapter-label');
        const progressBar = document.getElementById('progress-bar');
        
        function loadChapter(element) {
            links.forEach(l => l.classList.remove('active'));
            element.classList.add('active');
            currentIdx = links.indexOf(element);
            
            const cleanText = element.innerText.replace(/\d+$/, '').trim(); 
            labelDisplay.innerText = cleanText.toUpperCase();

            const percent = ((currentIdx + 1) / links.length) * 100;
            progressBar.style.width = percent + '%';
            
            // Reset TTS ao mudar de capítulo
            isPlaying = false;
            updatePlayIcon();

            if (window.innerWidth <= 768) {
                document.getElementById('sidebar').classList.remove('open');
            }
            updateButtons();
        }

        function navigateChapter(dir) {
            const nextIdx = currentIdx + dir;
            if (nextIdx >= 0 && nextIdx < links.length) {
                links[nextIdx].click();
            }
        }

        function updateButtons() {
            document.getElementById('btn-prev').disabled = (currentIdx === 0);
            document.getElementById('btn-next').disabled = (currentIdx === links.length - 1);
        }

        function toggleSidebar() {
            const sidebar = document.getElementById('sidebar');
            if (window.innerWidth <= 768) {
                sidebar.classList.toggle('open');
            } else {
                sidebar.classList.toggle('collapsed');
            }
        }

        window.onload = () => {
            updateButtons();
            progressBar.style.width = (1 / links.length * 100) + '%';
        };
    </script>
</body>
</html>
